---
import astronaut from "../images/imagesIA/DALLEastronaut.jpg";
import { Icon } from "astro-icon";
const socialNetwork = [
  { icon: "akar-icons:telegram-fill", link: "https://t.me/lenYN12" },
  { icon: "mdi:github", link: "https://github.com/LenYN-L" },
  { icon: "mdi:linkedin", link: "https://www.linkedin.com/in/lenynbejar/" },
];
---

<footer class="relative text-center sm:mt-0">
  <section class="flex justify-center gap-4 pt-3">
    {
      socialNetwork.map((social) => (
        <a href={social.link}>
          <Icon class="w-10 lg:w-12 " name={social.icon} />
        </a>
      ))
    }
  </section>
  <img class="w-10 mx-auto mt-5" src={astronaut} alt="astronaut" />
</footer>
