---
import CoffeAnimate from "../images/imagesProyects/coffee-animated-removeBG.gif";
---

<div class="container absolute lg:relative lg:flex">
  <div class="row">
    <i class="icon iconReact fa-brands fa-react"></i>
    <i class="icon iconGithub fa-brands fa-github"></i>
    <i class="icon iconSquereJs fa-brands fa-square-js"></i>
    <i class="icon iconPython fa-brands fa-python"></i>
    <i class="icon iconNodeJs fa-brands fa-node-js"></i>
    <i class="icon iconNpm fa-brands fa-npm"></i>
    <i class="icon iconCss3 fa-brands fa-css3-alt"></i>
    <i class="icon iconHtml5 fa-brands fa-html5"></i>
    <i class="icon iconGit fa-brands fa-git"></i>
    <i class="icon iconLinux fa-brands fa-linux"></i>
    <i class="icon iconJava fa-brands fa-java"></i>
    <i class="icon iconDatabase fa-solid fa-database"></i>
  </div>
  <picture class="containerImgCoffee">
    <img src={CoffeAnimate} alt="coffee" class="imgCoffee blur-sm" />
  </picture>
</div>

<style>
  .containerImgCoffee {
    margin-left: auto;
    margin-right: auto;
    display: inline-block;
    background-color: rgb(38, 255, 0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .imgCoffee {
    max-width: 400px;
    mix-blend-mode: difference;
    filter: grayscale(100%) blur(4px);
  }
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: auto;
    font-size: 50px;
  }

  .row {
    margin-left: auto;
    margin-right: auto;
    max-width: 400px;
    padding: 0;
    top: 0;
  }

  .icon {
    padding: 0 34px;
    user-select: none;
    color: white;
    /* filter: grayscale(100%) blur(4px); */
  }

  .iconGithub {
    animation: animate1 10s linear infinite;
  }
  @keyframes animate1 {
    0% {
      transform: translate(5vh, 30vh);
      opacity: 0%;
    }

    50% {
      transform: translate(10vh, 10vh);
      opacity: 100%;
    }

    100% {
      transform: translate(15vh, 0vh);
      opacity: 0%;
    }
  }

  .iconReact {
    animation: animate2 11s linear infinite;
  }
  @keyframes animate2 {
    0% {
      transform: translate(10vh, 25vh);
      opacity: 0%;
    }

    50% {
      transform: translate(5vh, 10vh);
      opacity: 100%;
    }

    100% {
      transform: translate(5vh, 5vh);
      opacity: 0%;
    }
  }

  .iconSquereJs {
    animation: animate3 12s linear infinite;
  }
  @keyframes animate3 {
    0% {
      transform: translate(-10vh, 30vh);
      opacity: 0%;
    }

    50% {
      transform: translate(-5vh, 10vh);
      opacity: 100%;
    }

    100% {
      transform: translate(2vh, 5vh);
      opacity: 0%;
    }
  }

  .iconPython {
    animation: animate4 13s linear infinite;
  }
  @keyframes animate4 {
    0% {
      transform: translate(15vh, 25vh);
      opacity: 0%;
    }

    50% {
      transform: translate(10vh, 10vh);
      opacity: 100%;
    }

    100% {
      transform: translate(5vh, 5vh);
      opacity: 0%;
    }
  }

  .iconNodeJs {
    animation: animate5 14s linear infinite;
  }
  @keyframes animate5 {
    0% {
      transform: translate(5vh, 25vh);
      opacity: 0%;
    }

    50% {
      transform: translate(10vh, 10vh);
      opacity: 100%;
    }

    100% {
      transform: translate(15vh, 5vh);
      opacity: 0%;
    }
  }

  .iconNpm {
    animation: animate6 15s linear infinite;
  }
  @keyframes animate6 {
    0% {
      transform: translate(-10vh, 25vh);
      opacity: 0%;
    }

    50% {
      transform: translate(-5vh, 10vh);
      opacity: 100%;
    }

    100% {
      transform: translate(0vh, 5vh);
      opacity: 0%;
    }
  }

  .iconTerminal {
    animation: animate7 16s linear infinite;
  }
  @keyframes animate7 {
    0% {
      transform: translate(5vh, 25vh);
      opacity: 0%;
    }

    50% {
      transform: translate(5vh, 10vh);
      opacity: 100%;
    }

    100% {
      transform: translate(5vh, 5vh);
      opacity: 0%;
    }
  }

  .iconCss3 {
    animation: animate8 17s linear infinite;
  }
  @keyframes animate8 {
    0% {
      transform: translate(15vh, 10vh);
      opacity: 0%;
    }

    50% {
      transform: translate(20vh, -5vh);
      opacity: 100%;
    }

    100% {
      transform: translate(25vh, -15vh);
      opacity: 0%;
    }
  }

  .iconHtml5 {
    animation: animate9 18s linear infinite;
  }
  @keyframes animate9 {
    0% {
      transform: translate(5vh, 10vh);
      opacity: 0%;
    }

    50% {
      transform: translate(5vh, -5vh);
      opacity: 100%;
    }

    100% {
      transform: translate(5vh, -10vh);
      opacity: 0%;
    }
  }

  .iconGit {
    animation: animate10 19s linear infinite;
  }
  @keyframes animate10 {
    0% {
      transform: translate(-5vh, 12vh);
      opacity: 0%;
    }

    50% {
      transform: translate(0vh, 3vh);
      opacity: 100%;
    }

    100% {
      transform: translate(5vh, -5vh);
      opacity: 0%;
    }
  }

  .iconLinux {
    animation: animate11 20s linear infinite;
  }
  @keyframes animate11 {
    0% {
      transform: translate(15vh, 8vh);
      opacity: 0%;
    }

    50% {
      transform: translate(10vh, 0vh);
      opacity: 100%;
    }

    100% {
      transform: translate(5vh, -10vh);
      opacity: 0%;
    }
  }

  .iconGoogle {
    animation: animate12 21s linear infinite;
  }
  @keyframes animate12 {
    0% {
      transform: translate(5vh, 25vh);
      opacity: 0%;
    }

    50% {
      transform: translate(5vh, 5vh);
      opacity: 100%;
    }

    100% {
      transform: translate(5vh, 0vh);
      opacity: 0%;
    }
  }

  .iconJava {
    animation: animate13 22s linear infinite;
  }
  @keyframes animate13 {
    0% {
      transform: translate(5vh, 7vh);
      opacity: 0%;
    }

    50% {
      transform: translate(5vh, -10vh);
      opacity: 100%;
    }

    100% {
      transform: translate(5vh, -18vh);
      opacity: 0%;
    }
  }

  .iconDatabase {
    animation: animate14 23s linear infinite;
  }
  @keyframes animate14 {
    0% {
      transform: translate(-15vh, 5vh);
      opacity: 0%;
    }

    50% {
      transform: translate(-2vh, -10vh);
      opacity: 100%;
    }

    100% {
      transform: translate(5vh, -25vh);
      opacity: 0%;
    }
  }
</style>

<script src="https://kit.fontawesome.com/3996778aa0.js" crossorigin="anonymous"
></script>
