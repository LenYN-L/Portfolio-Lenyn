---
import Footer from "../components/footer.astro";
import Navbar from "../components/navbar.astro";
import "../styles/Layout.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="DALLEAstronaut.jpg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Press+Start+2P&family=Special+Elite&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="max-w-screen-lg mx-auto px-5 text-white border-b-green-300 border-l-green-300 border-r-orange-300 border-t-orange-300 border-4 rounded-3xl"
  >
    <Navbar />
    <main class="">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script src="https://kit.fontawesome.com/3996778aa0.js" crossorigin="anonymous"
></script>
