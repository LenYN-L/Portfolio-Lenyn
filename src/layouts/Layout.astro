---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
import "../styles/Layout.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href='DALLEAstronaut.jpg'/>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Press+Start+2P&family=Special+Elite&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-screen-xl mx-auto px-5 h-screen">
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
